{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}"
                           alt="todo list">{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info pull-right m-3">Créer une tâche</a>
    <br>
    {% if  is_granted('ROLE_ADMIN') %}
        <hr>
        <div class="row mb-2">
        <h2 class="text-center">Toutes les tâches </h2>
            {% for task in tasks %}
                {% if task.user %}
                    <div class="col-sm-4 col-lg-4 col-md-4 ">
                        <br>
                        <div class="thumbnail">
                            <div class="caption">
                                <h4 class="pull-right">
                                    {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}
                                        <span class="glyphicon glyphicon-remove"></span>{% endif %}
                                </h4>
                                <h4><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                                <span class="text-muted">{{ task.user }}</span>
                                <p>{{ task.content }}</p>
                            </div>
                            <div>
                                <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                                    <button class="btn btn-success btn-sm pull-right">
                                        {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                                    </button>
                                </form>
                                <form method="post" action="{{ path('task_delete', {'id' : task.id }) }}">
                                    <button type="submit" class="btn btn-danger btn-sm pull-right">Supprimer</button>
                                </form>

                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
    {% endif %}
    </div>
    <hr>
    <h2 class="text-center">Mes tâches </h2>
    <div class="row">
        {% for task in tasks %}
            {% if task.user == app.user %}
                <div class="col-sm-4 col-lg-4 col-md-4 ">
                    <br>
                    <div class="thumbnail">
                        <div class="caption">
                            <h4 class="pull-right">
                                {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}
                                    <span class="glyphicon glyphicon-remove"></span>{% endif %}
                            </h4>
                            <h4><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                            <span class="text-muted">{{ task.user }}</span>
                            <p>{{ task.content }}</p>
                        </div>
                        <div>
                            {% if task.user %}
                                <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                                    <button class="btn btn-success btn-sm pull-right">
                                        {% if not task.isDone %}
                                            Marquer comme faite
                                        {% else %}
                                            Marquer non terminée
                                        {% endif %}
                                    </button>
                                </form>
                            {% endif %}
                            <form method="post" action="{{ path('task_delete', {'id' : task.id }) }}">
                                <button type="submit" class="btn btn-danger btn-sm pull-right">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <div class="col-lg-12">
                <div class="alert alert-info" role="alert">
                    <p>Il n'y a pas encore de tâche enregistrée.</p>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <hr>
        <h2 class="text-center">Tâche Anonyme</h2>
        <div class="row">
            {% for task in tasks %}
                {% if not task.user == app.user %}
                    <div class="col-sm-4 col-lg-4 col-md-4 ">
                        <br>
                        <div class="thumbnail">
                            <div class="caption">
                                <h4 class="pull-right">
                                    {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}
                                        <span class="glyphicon glyphicon-remove"></span>{% endif %}
                                </h4>
                                <h4><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                                <span class="text-muted">{{ task.user }}</span>
                                <p>{{ task.content }}</p>
                            </div>
                            <div>
                                {% if task.user %}
                                    <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                                        <button class="btn btn-success btn-sm pull-right">
                                            {% if not task.isDone %}
                                                Marquer comme faite
                                            {% else %}
                                                Marquer non terminée
                                            {% endif %}
                                        </button>
                                    </form>
                                {% endif %}
                                {% if is_granted('DELETE_TASK', task) %}
                                    <form method="post" action="{{ path('task_delete', {'id' : task.id }) }}">
                                        <button type="submit" class="btn btn-danger btn-sm pull-right">Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="col-lg-12">
                    <div class="alert alert-info" role="alert">
                        <p>Il n'y a pas encore de tâche enregistrée.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}


{% endblock %}
